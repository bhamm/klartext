{
  "name": "klartext",
  "version": "1.5.79",
  "description": "Chrome extension for translating German texts into 'Leichte Sprache'",
  "private": true,
  "scripts": {
    "build": "webpack --config webpack.config.js && npm run copy-assets",
    "copy-assets": "mkdir -p dist/content dist/config dist/settings && cp src/content/overlay.css dist/content/ && cp src/config/api-keys.json src/config/prompts.json dist/config/ && cp src/settings/settings.html dist/settings/ && cp src/settings/bmc-button.png dist/settings/",
    "package": "zip -r klartext.zip . -x '*.git*' 'node_modules/*' '*.zip' '*.crx' '*.pem' 'package*.json' 'README.md' 'LICENSE'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:selenium": "node test/selenium/runner.js",
    "test:selenium:single": "mocha"
  },
  "keywords": [
    "chrome-extension",
    "accessibility",
    "translation",
    "leichte-sprache",
    "german"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/text-to-speech": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/chrome": "^0.0.306",
    "@types/jest": "^29.0.0",
    "@types/mocha": "^10.0.10",
    "@types/puppeteer": "^5.4.7",
    "@types/selenium-webdriver": "^4.1.28",
    "babel-loader": "^9.2.1",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "mocha": "^10.8.2",
    "puppeteer": "^19.7.0",
    "selenium-webdriver": "^4.29.0",
    "ts-jest": "^29.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.0.0",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}
