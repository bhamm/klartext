{
  "name": "klartext",
  "version": "1.5.12",
  "description": "Chrome extension for translating German texts into 'Leichte Sprache'",
  "private": true,
  "scripts": {
    "build": "webpack --config webpack.config.js && npm run copy-assets",
    "copy-assets": "mkdir -p dist/content dist/config dist/popup && cp src/content/overlay.css dist/content/ && cp src/config/api-keys.json dist/config/ && cp src/popup/popup.html dist/popup/ && cp src/popup/bmc-button.png dist/popup/",
    "package": "zip -r klartext.zip . -x '*.git*' 'node_modules/*' '*.zip' '*.crx' '*.pem' 'package*.json' 'README.md' 'LICENSE'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "chrome-extension",
    "accessibility",
    "translation",
    "leichte-sprache",
    "german"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/chrome": "^0.0.306",
    "@types/jest": "^29.0.0",
    "babel-loader": "^9.2.1",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.0.0",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}
